#!/bin/bash

#author:	KoalaAteMySnack@Github
#name:		termfetch
#version:	0.1
#description:	simple system information for terminal emulator
#edit:		Sun Oct 08 2017 20:50

#commands
cols=$(tput cols) #total columns
date=$(date +%a" "%b" "%d" "%Y" "%r" "%Z) #formatted date

#center a line in relation to the total terminal window columns
#arg1=line to center
center_line () {
	len=$(echo $1 | wc -c)
	tot=$[$cols-$len]
	printf "%*s" $[$tot/2]
	echo $1
}

#center a line in relation to a reference line
#arg1=reference line
#arg2=centered line
center_line2 () {
	len=$(echo $1 | wc -c)
	tot=$[$cols-$len]
	printf "%*s" $[$tot/2]
	echo $2
}

#show the date in the center of the terminal window
center_line "$date"
