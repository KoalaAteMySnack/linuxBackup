#!/bin/bash

#author: 				KoalaAteMySnack@Github
#name:					settvdisplay
#version:				0.1
#description: 	simple underscan for using tv as a display
#edit:					Sun Oct 08 2017 20:50

#turn underscan on
xrandr --output HDMI-1 --set underscan on

#set horizontal border
xrandr --output HDMI-1 --set "underscan hborder" 60

#set vertical border
xrandr --output HDMI-1 --set "underscan vborder" 30
